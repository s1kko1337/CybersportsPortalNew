<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">CyberSportsPortal</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Главная
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="teams">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Команды
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="tournaments">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Турниры
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Игроки
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="calculateRating">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Расчет рейтинга
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
